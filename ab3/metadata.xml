<?xml version="1.0" encoding="utf-8"?>
<plugin id="ab3">
  <mirror-site id="ab3">
    <name>Mirror for ab3.com.cn</name>
    <storage type="file"/>
    <advertiser type="httpdir"/>
    <advertiser type="ftp"/>
    <initializer>
      <executable>updater.py</executable>
    </initializer>
    <updater>
      <executable>updater.py</executable>
      <cron-expression>0 * * * *</cron-expression>
    </updater>
    <need-log-directory/>
  </mirror-site>
</plugin>
